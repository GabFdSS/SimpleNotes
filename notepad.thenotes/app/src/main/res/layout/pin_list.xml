<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/notespin_container_pin"
    android:layout_width="120dp"
    android:layout_height="match_parent"
    android:layout_marginHorizontal="3dp"
    android:layout_marginBottom="6dp"
    app:cardCornerRadius="13dp"
    app:cardElevation="3dp"
    android:layout_alignParentBottom="true"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true"
    android:layout_alignParentEnd="true"
    tools:ignore="TextSizeCheck">
    <LinearLayout
        android:id="@+id/card_lback_pin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back_note_card_selected"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent">
            <TextView
                android:id="@+id/textView_title_pin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:ellipsize="marquee"
                android:marqueeRepeatLimit="marquee_forever"
                android:paddingHorizontal="10dp"
                android:paddingVertical="2dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="Title"
                android:textColor="@color/graffitd"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />
            <ImageView
                android:id="@+id/imageview_pin"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_margin="3dp"
                tools:ignore="ContentDescription,ImageContrastCheck" />
        </RelativeLayout>
        <TextView
            android:id="@+id/textView_notes_pin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:paddingHorizontal="10dp"
            android:paddingVertical="5dp"
            android:text="Grade Notes\n test of note."
            android:textColor="@color/graffit"
            android:textSize="12sp"
            android:textStyle="normal"
            tools:ignore="HardcodedText" />
        <TextView
            android:id="@+id/textView_date_pin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="15dp"
            android:paddingVertical="3dp"
            android:scrollHorizontally="true"
            android:ellipsize="marquee"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:text="Date"
            android:gravity="end|bottom"
            android:textAlignment="textEnd"
            android:textColor="@color/graffitl"
            android:textSize="11sp"
            android:textStyle="normal"
            tools:ignore="HardcodedText,TextContrastCheck" />
    </LinearLayout>
</androidx.cardview.widget.CardView>